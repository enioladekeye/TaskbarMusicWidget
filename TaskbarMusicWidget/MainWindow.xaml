<Window x:Class="TaskbarMusicWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wc="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Taskbar Music Widget"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Width="300" Height="60"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">


    <Border Background= "#22FFFFFF" CornerRadius="9">
        <TextBlock Text="🎵 Now Playing"
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="18"/>
    </Border>
</Window>
